@model Web.ViewModels.ThemesViewModel
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Change Theme"];
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<link rel="stylesheet" href="~/css/Themes.css"/>

<div class="panel panel-default col-sm-5">
    <form asp-controller="Themes" asp-action="Index" method="post">
        <div class="one-line">
            <div>
                <label>@Localizer["Selected Theme:"]</label>
                            <select asp-for="SelectedTheme" asp-items="Model.Themes"></select>
            </div>
            <button type="submit" class="btn btn-success">Save</button>
        </div>
        <div>
            @if (ViewData["Error"] != null)
            {
                <p>
                    <strong class="text-danger">Error: </strong> @ViewData["Error"].ToString()</p>
            }
            @if (TempData["Success"] != null)
            {
                <p>
                    <strong class="text-success">Success!</strong> @TempData["Success"].ToString()</p>
            }
        </div>
    </form>
</div>